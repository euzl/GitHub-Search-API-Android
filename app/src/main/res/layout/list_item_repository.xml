<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dto"
            type="com.euzl.github_search_api_android.dto.RepositoryDto" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/list_item_repository_padding_size"
        android:paddingTop="@dimen/list_item_repository_padding_size" >

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dto.fullName}"
            android:textSize="18sp"
            android:textColor="@color/purple_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dto.description}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullName"/>

        <ImageView
            android:id="@+id/starImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_outline_24"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/gray_regular" />

        <TextView
            android:id="@+id/starCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dto.starCount.toString()}"
            app:layout_constraintTop_toTopOf="@id/starImage"
            app:layout_constraintBottom_toBottomOf="@id/starImage"
            app:layout_constraintStart_toEndOf="@id/starImage"/>

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dto.language}"
            android:layout_marginLeft="@dimen/list_item_repository_left_margin_size"
            app:layout_constraintTop_toTopOf="@id/starImage"
            app:layout_constraintBottom_toBottomOf="@id/starImage"
            app:layout_constraintStart_toEndOf="@id/starCount" />

        <TextView
            android:id="@+id/license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dto.license}"
            android:layout_marginLeft="@dimen/list_item_repository_left_margin_size"
            app:layout_constraintTop_toTopOf="@id/starImage"
            app:layout_constraintBottom_toBottomOf="@id/starImage"
            app:layout_constraintStart_toEndOf="@id/language" />

        <TextView
            android:id="@+id/updateAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update at"
            android:layout_marginLeft="@dimen/list_item_repository_left_margin_size"
            app:layout_constraintTop_toTopOf="@id/starImage"
            app:layout_constraintBottom_toBottomOf="@id/starImage"
            app:layout_constraintStart_toEndOf="@id/license"
            app:date="@{dto.updatedAt}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_medium"
            app:layout_constraintTop_toBottomOf="@id/updateAt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/list_item_repository_padding_size" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>